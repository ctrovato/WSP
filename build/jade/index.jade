doctype html
html.no-js(lang='en')
  head
    body
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title Canon Direct Store
      link(rel='stylesheet', href='css/foundation.css')
      link(rel='stylesheet', href='css/main.css')
      script(src='js/vendor/modernizr.js')
  .row
    .large-12.columns
        // Navigation
        nav.top-bar(data-topbar='')
          ul.title-area
            li
              a(href="index.html")
                img.logo(src='images/Canon_logo.png')

            // Title Area
            li.name
              h1
                a(href='#')
            li.toggle-topbar.menu-icon
              a(href='#')
                span menu
          section.top-bar-section
            ul.left
              li
                a(href='ProductListing.html') Products
              li
                a(href='Contact.html') Contact
              li
                a(href='SignUp.html') Sign Up
        // End Navigation
  .row
    .large-12.columns
      // Desktop Slider
      .hide-for-small
        #featured
          a.shop(href='ProductListing.html')
            | Start Shopping

      // End Desktop Slider
      // Mobile Header
      .row
        .small-12.show-for-small
          br
          img(src='images/productBanner.jpg')
      // End Mobile Header
  br
  .row
    .large-12.columns
      .row.text-center
        // Thumbnails
        .large-3.small-6.columns
          img(src='images/sale-icon.jpg')
          h6.panel Special Offers
        .large-3.small-6.columns
          img(src='images/clearance-icon.jpg')
          h6.panel Clearance Offers
        .large-3.small-6.columns
          img(src='images/exclusive-icon.jpg')
          h6.panel Exclusive Deals
        .large-3.small-6.columns
          img(src='images/referbished-icon.jpg')
          h6.panel Referbished Cameras
        // End Thumbnails
  .row
    .large-12.columns
      .row
        // Content
        .large-8.columns
          .panel.radius
            .row

        .large-4.columns.hide-for-small
          h4 Technical Support: Get Help with Products, Downloads, and more.
          hr
          a.submit(href='Contact.html')
            | Contact Us

        // End Content
  // Footer
  footer.row
    .large-12.columns
      hr
      .row
        .large-6.columns
          p &#169; Copyright Canon Inc.  All Rights Reserved
  script(src='js/vendor/jquery.js')
