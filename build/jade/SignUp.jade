doctype htmlhtml.no-js(lang='en')
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Canon Direct Store
    link(rel='stylesheet', href='css/foundation.css')
    link(rel='stylesheet', href='css/main.css')
    script(src='js/vendor/foundation.min.js')
    script(src='js/vendor/modernizr.js')
 .large-12.columns
  // Navigation
  nav.top-bar(data-topbar='')
    ul.title-area
      li
        a(href='index.html')
          img.logo(src='images/Canon_logo.png')
      // Title Area
      li.name
        h1
          a(href='#')
      li.toggle-topbar.menu-icon
        a(href='#')
          span menu
    section.top-bar-section
      ul.left
        li
          a(href='ProductListing.html') Products
        li
          a(href='Contact.html') Contact
        li
          a(href='#') Sign Up
  // End Navigation
// Sign Up FORM ------
section.section_light
  .row
    .large-12.columns
      article
        h5 Sign Up
      form.forms
        input.name(placeholder='First, Last ', type='text')
        label Your Email
        input.email(placeholder='Example@example.com', type='text')
        .row
        // DROP BOX
        #dropbox.float_left.clear
          p
            | Newsletter:
            br
            | Would You like to receive Newsletters via Email
          select(name='marketing')
            option  Select One
            option(value='Black') Yes, Weekly
            option(value='Blue') Yes, Monthly
            option(value='Brown') Yes, Annually
            option(value='Green') No, Thank You
          // SUBMIT
          button.submit  Sign Up
